// Variables
mBlue       = #3D76C5
mBlueOld    = #6A92C9
mDkBlue     = #00264F
mLtBlue     = #BCCEE7
mOrange     = #FE6800
mLtOrange   = #FFC3A5
mGreyBlue   = #D1D5DE
mLtGreyBlue = #E3E9FD
mTextBlue   = #29333D
mTextLtBlue = #546982

font-family-sans = "Helvetica Neue", Helvetica, Arial, sans-serif
font-family-serif = Georgia, serif


// Styles

h1
  font-family font-family-sans
  font-size 24px
  font-weight bolder
  letter-spacing -0.02em
  line-height 1.25
  color mDkBlue
  margin-top 24px
  margin-bottom 24px
  
h2
  font-family font-family-sans
  font-size 17px
  font-weight bolder
  line-height 1.25
  color mBlue
  margin-top 8px
  margin-bottom 8px
  
p
  font-family font-family-serif
  font-size 14px
  color mTextBlue
  line-height 20px
  &.margin-zero
    margin 0    
  
a
  color mBlue
  transition color 0.15s ease
  &:hover, &:active
    color mOrange !important
  &:visited
    color mBlueOld

hr
  width 200px
  height 4px
  background-color mDkBlue
  margin 28px auto 0 0
  
table[class='body'] table.column td.width-auto,
table[class='body'] table.columns td.width-auto
  width auto !important
  
.caption p
  font-family font-family-sans
  font-size 12px
  color mTextLtBlue
  text-shadow 0 1px 0 mLtGreyBlue
  text-align center
  line-height 18px

.interstitial-image img
  border 4px solid white
  box-sizing border-box;
  
  .caption p
    text-align center
    
.interstitial-text
  padding 10px 0
  p
    text-align center
    font-size 16px
    color mTextLtBlue
    text-shadow 0 1px 0 mLtGreyBlue
    line-height 1.25
  a
    text-decoration underline

span.num
  display inline-block
  font-family font-family-sans
  font-weight bolder
  font-size 10px
  color white
  background-color mLtBlue
  border-radius 500px
  width 17px
  height 17px
  line-height 17px
  text-align center
  margin-right 6px
  position relative
  top -1px
  left -1px
  
body, table.body
  background mGreyBlue
  color mTextBlue

.container.white
  background-color #FFFFFF
  margin-bottom 20px
  padding-bottom 40px

.pad-bottom
  padding-bottom 20px !important

.email-header
  margin-bottom 4px
  td
    vertical-align bottom

.header-logo
  text-align center
  a
    width 83%
    margin-top 16px
    display inline-block

.header-date, .header-link
  vertical-align bottom
  color mTextLtBlue

.header-link
  text-align right

.columns td.title-container
    background-color white
    position relative
    top -80px
    padding 30px
    h1
      font-size 28px
      margin-top 0
      margin-bottom 0
    p
      font-size 18px
      line-height 1.5
      margin 18px 0

table.title-container-table
  margin-bottom -80px
  
img.signature
  height 60px
  float none

.table-of-contents h2
  margin-top 24px

td.stats-container
  border 1px solid
  border-radius 3px
  padding 8px 0 !important
  text-align center
  vertical-align middle
  margin-bottom 30px
  &.blue
    border-color mGreyBlue
  &.orange
    border-color mLtOrange
    &:hover
      transition all 0.2s ease
      border-color mOrange
      background-color mOrange
      h2, .stats-desc
        color white


td.stats-cell
  text-align center
  padding 6px !important

.stats-amount
  font-family font-family-serif    
  font-size 18px
  color mBlueOld
  display block

.stats-desc
  font-family font-family-sans
  font-size 10px
  color mBlueOld
  display block

.stats-donate-button
  h2
    color mOrange
    margin 0
    text-align center
  .stats-desc
    color mOrange

@media only screen and (max-width: 600px) 
  .columns td.title-container
    top 0
  
  table.title-container-table
    margin-bottom 0
  
  table[class='body'] table.column td.width-auto,
  table[class='body'] table.columns td.width-auto
    width auto !important
    
  table[class="body"] img.signature
    height 60px !important
    float none
    
  td.stats-container
    margin-bottom 4px
    &.blue
      margin-top 6px
      border-radius 0
      border-width 1px 0 0 0
