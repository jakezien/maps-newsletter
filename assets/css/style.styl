// Variables
mBlue       = #3D76C5
mBlueOld    = #6A92C9
mDkBlue     = #00264F
mLtBlue     = #BCCEE7
mOrange     = #FE6800
mLtOrange   = #FFC3A5
mGreyBlue   = #D1D5DE
mLtGreyBlue = #E3E9FD
mDkGreyBlue = #9DA5B3
mXdkGreyBlue = #868E9C
mTextBlue   = #29333D
mTextLtBlue = #546982

font-family-sans = "Helvetica Neue", sans-serif
font-family-serif = Georgia, serif


// Styles

body, table.body
  background mGreyBlue
  color mTextBlue

h1
  font-family font-family-sans
  font-size 24px
  font-weight bolder
  letter-spacing -0.02em
  line-height 1.25
  color mDkBlue
  margin-top 24px
  margin-bottom 24px

h2
  font-family font-family-sans
  font-size 18px
  font-weight bolder
  line-height 1.25
  color mBlue
  margin-top 32px
  margin-bottom 8px

h3
  font-family font-family-sans
  font-size 16px
  font-weight normal
  line-height 1.25
  color mBlue
  margin-top 20px
  margin-bottom 8px

p
  margin-top 0

p, li
  font-family font-family-serif
  font-size 16px
  color mTextBlue
  line-height 24px
  &.margin-zero
    margin 0

a, h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
  text-decoration none
  color mBlue
  transition color 0.15s ease
  &:hover, &:active
    color mOrange !important
  &:visited
    color mBlue

ul, li
  margin 0
  padding 0
ul
  padding-left 18px
li
  margin-bottom 8px


hr
  width 100%
  height 1px
  background-color mDkGreyBlue
  margin 16px 0
  border none

hr.bold
  width 200px
  height 4px
  background-color mDkBlue
  margin 28px auto 0 0

.wrapper
  background-color white
  &.no-bg
    background-color mGreyBlue

.sectionBreak
  height 20px
  background-color mGreyBlue

.floatLeft
  float left
  margin 4px

.floatRight
  float right
  margin 4px

.title-container
  margin-bottom 40px

.pad-bottom
  padding-bottom 20px !important

.imgClass.small
  max-width 200px !importants
  height auto !important
  
.imgClass.small.portrait
  max-height 120px !important
  width auto !important

.donationStats
  text-align: center !important;
  td
    margin 10px 0

.footer-header
  text-align center
  .floatLeft
    text-align left
  .floatRight
    text-align right
    
.social-icon
  text-align center

.footer-link
  text-align center
  margin 0
  
.white, .white .container
  margin-bottom 20px

.no-margin-top
  margin-top 0 !important

.no-margin-bottom
  margin-bottom 0 !important

.no-padding
  padding 0
  
img.interstitial
  border 4px solid white
  box-sizing border-box

.toc-num
  vertical-align top

.toc-title
  margin-top 0
  margin-bottom 8px
  
.email-header
  td
    text-align center
    vertical-align bottom
    
.header-date, .header-link
  vertical-align bottom
  color mTextLtBlue
  margin 0
  margin-top 120px

.header-link a
  color mTextLtBlue

.header-link
  text-align right

span.num
  display inline-block
  font-family font-family-sans
  font-weight bolder
  font-size 10px
  color white
  background-color mLtBlue
  border-radius 500px
  width 17px
  height 17px
  line-height 17px
  text-align center
  margin-right 6px
  margin-top 4px
  position relative
  top -1px
  left -1px

.stats-cell
  padding 0
  margin 0

.stats-amount
  font-family font-family-serif
  font-size 18px
  color mBlueOld
  display block

.stats-desc
  font-family font-family-sans
  font-size 10px
  color mBlueOld
  display block

.middle-border
  border 1px solid mGreyBlue
  border-width 0 1px

.stats-donate-button
  h2
    color mOrange
    margin 0
    text-align center
  .stats-desc
    color mOrange

.media
  clear both
  li
    list-style none
  h3, p
    margin-bottom 6px
  a
    color mTextLtBlue !important
    text-decoration underline !important
  .caption
    text-align left
    text-shadow none
    color mDkGreyBlue



@media only screen and (max-width: 599px)
  .footer-header
    .floatLeft, .floatRight
      text-align center
      float none
      
  .header-date, .header-link
    margin 16px 0 !important
  
  .stats-amount
    margin-top 10px
  .stats-desc
    margin-bottom 10px
  .middle-border
    border-width 1px 0

  .imgClass.small
    max-width 110px !important
    height auto !important
  
  .imgClass.small.portrait
    width auto !important
    max-height 110px !important
  


