// —————————— FRONT PAGE —————————— 
+container()(class='white front-page')
  +row()
    td
      // ——— COVER IMAGE ———
      img(height='300px' src='https://placeholdit.imgix.net/~text?txtsize=72&txt=650x300%0A%28or+1300x600+for+retina+displays%29&w=1300&h=600&txttrack=0' alt='Newsletter cover image')

  +row()
    +column('one')
    +columns('ten', '', 'last title-container-table')
      td.title-container
        // ——— HEADLINE ——— 
        h1 The Title of this Newsletter Will Go Right Here
        p Subheadline providing a two-to-three-line summary will fit into this space right here
        hr.bold

  +basicColumn(true)
    // ——— INTRO LETTER ——— 
    p Dear friends and supporters,
    p Content
    p Content
    p Content
    br
    p Signoff,
    img.signature(src='img/brad_sig.gif' alt='Brad Burge\'s signature')
    p: i Brad Burge#[br]Maps Director of Communications#[br]and Marketing