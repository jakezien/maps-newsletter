    td
      // ——— COVER IMAGE ———
      img(src='http://placehold.it/650x280')

  +row()
    +column('one')
    +columns('ten', '', 'last title-container-table')
      td.title-container
        // ——— HEADLINE ——— 
        h1 The Title of this Newsletter Will Go Right Here
        p Subheadline providing a two-to-three-line summary will fit into this space right here
