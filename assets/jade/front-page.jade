+basicWrapper(class='white front-page')
  tr
    // ——— COVER IMAGE ———
    img(height='300px' alt='Newsletter cover image' src='https://placeholdit.imgix.net/~text?txtsize=72&txt=640x300%0A%28or+1280x600+for+retina+displays%29&w=1280&h=600&txttrack=0')
  
  tr
    +gridCustom('50')
    +gridCustom('500', 'title-container')
      h1 The Title of this Newsletter Will Go Right Here
      p Subheadline providing a two-to-three-line summary will fit into this space right here
      hr.bold
      
    +gridCustom('50')

+basicWrapper(class='white front-page')
  +gridWhole()
